{
    "name": "douglasgreen/imdb",
    "description": "Process IMDB non-commercial datasets",
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/douglasgreen/imdb",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "data processing",
        "datasets",
        "filter",
        "IMDb",
        "movies",
        "non-commercial",
        "PHP",
        "ratings",
        "scripts",
        "statistics"
    ],
    "autoload": {
        "psr-4": {
            "DouglasGreen\\Imdb\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        },
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/php-linter"
        }
    ],
    "require": {
        "php": ">=8.1",
        "douglasgreen/optparser": "dev-main",
        "douglasgreen/utility": "dev-main"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.11",
        "rector/rector": "^1.1",
        "symplify/easy-coding-standard": "^12.3"
    },
    "scripts": {
        "lint": [
            "ecs",
            "php-linter",
            "phpstan analyse",
            "phpmd --cache --cache-file var/cache/phpmd/cache.php . text phpmd.xml",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "config-setup",
        "post-update-cmd": "config-setup"
    }
}
